<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <table class="table">
        <thead>
          <tr>
            <th>Room name</th>
            <th>Rate</th>
            <th>Capacity</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= room.room_name %></td>                
              <td>RM<%= room.rate %></td>                
              <td><%= room.capacity %> people</td>
              <td>
                <a href="">edit</a> | 
                <a href="">delete</a>
              </td>                                                   
            </tr>            
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
